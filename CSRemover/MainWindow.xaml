        <Button Content="Read terms and conditions" Grid.Column="0" Grid.Row="4" Margin="10 5" FontFamily="Tw Cen MT Condensed" FontSize="24" Click="TermsButton_Click"/>
        <Button Content="Next" Grid.Column="2" Grid.Row="5" Margin="10 5" Foreground="#FF00E014" BorderBrush="#FF2D087C" Background="#FF342222" FontFamily="Tw Cen MT Condensed" FontSize="24" Click="NextButton_Click"/>
